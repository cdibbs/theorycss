chris
  theory main
    html is john(5, this.node);
      div
        @bob is { chris: 'was here' };
        a
          span
        b

    bob = "width < 300px";

    ff myff(n)
      where start = n;
      ...
        -> { chris: twoChris }
           where twoChris = 2 * start
           yield start = 3 * twoChris;
        <- { angel: 3.141 };

    fn john(a, node) ->
      if (len(node.children()) > 0) then
        reduce(
        	\x,y => john(a, node.apply({chris: 'blue'}, y)),
        	node.children(),
        	0)
      else node.apply({chris: 'base case'}, { 'background-color' : 'sweet' })
      endif;
      
    fn recMyFn(i, node) -> if (node.children().length == 0) then i else recMyFn(i+1, node.children()[0]) endif;
